<?xml version="1.0"?>
<layout version="0.1.0">
	<catalog_category_default>
		<update handle="banner_master" />
	</catalog_category_default>
	<banner_master>
		<!-- <update handle="moneybookers_processing_payment"/>
		<update handle="moneybookers_processing_placeform"/> -->
		<reference name="content">
			<block type="bannerslider/bannerslider" name="bannerslider"
				template="bannerslider/bannerslider.phtml">
				<action method="setDisplay">
					<display>1</display>
				</action>
			</block>
		</reference>
	</banner_master>
	<catalog_category_layered>
		<update handle="banner_master" />
	</catalog_category_layered>
	<cms_index_index>
		<reference name="footer_links">
			<action method="addLink">
				<label>News</label>
				<url>news</url>
				<title>News</title>
				<prepare>true</prepare>
			</action>
		</reference>
		<reference name="bannerslider">
			<action method="setDisplay">
				<display>0</display>
			</action>
		</reference>
		<update handle="banner_master" />
	</cms_index_index>
</layout> 